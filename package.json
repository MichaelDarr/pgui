{
  "name": "pgui",
  "version": "0.0.1",
  "description": "A PostgreSQL GUI",
  "scripts": {
    "build": "npm run build:proto && concurrently \"npm run build:backend\" \"npm run build:main\" \"npm run build:renderer\" \"npm run build:preload\"",
    "build:backend": "make backend",
    "build:main": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.main.prod.ts",
    "build:preload": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.preload.prod.ts",
    "build:proto": "make proto",
    "build:renderer": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.prod.ts",
    "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir src",
    "lint": "cross-env NODE_ENV=development eslint . --cache --ext .js,.jsx,.ts,.tsx",
    "package": "ts-node ./.erb/scripts/clean.js dist && npm run build && electron-builder build --publish never",
    "postinstall": "ts-node .erb/scripts/check-native-dep.js && electron-builder install-app-deps && cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.dev.dll.ts",
    "start": "ts-node ./.erb/scripts/check-port-in-use.js && npm run start:renderer",
    "start:main": "cross-env NODE_ENV=development electron -r ts-node/register/transpile-only ./src/main/index.ts",
    "start:preload": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack build --config ./.erb/configs/webpack.config.preload.dev.ts",
    "start:renderer": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack serve --config ./.erb/configs/webpack.config.renderer.dev.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env NODE_ENV=development eslint --cache"
    ]
  },
  "build": {
    "productName": "pgui",
    "appId": "org.erb.pgui",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "files": [
      "dist",
      "node_modules",
      "package.json"
    ],
    "afterSign": ".erb/scripts/notarize.js",
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "app": "release/app",
      "buildResources": "assets",
      "output": "release/build"
    },
    "extraResources": [
      "./assets/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "MichaelDarr",
      "repo": "pgui"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MichaelDarr/pgui.git"
  },
  "author": "Michael Darr",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/MichaelDarr/pgui/issues"
  },
  "homepage": "https://github.com/MichaelDarr/pgui#readme",
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "0.5.1",
    "@types/core-js": "^2.5.5",
    "@types/google-protobuf": "^3.15.5",
    "@types/node": "16.11.6",
    "@types/node-ipc": "^9.2.0",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/regenerator-runtime": "^0.13.1",
    "@types/source-map-support": "^0.5.4",
    "@types/uuid": "^8.3.4",
    "@types/webpack-env": "^1.16.3",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "chalk": "^4.1.2",
    "concurrently": "^6.3.0",
    "core-js": "^3.19.0",
    "cross-env": "^7.0.3",
    "detect-port": "^1.3.0",
    "electron": "^17.0.0",
    "electron-builder": "^22.14.13",
    "electron-devtools-installer": "^3.2.0",
    "electron-notarize": "^1.1.1",
    "electron-rebuild": "^3.2.3",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.26.1",
    "grpc-tools": "^1.11.2",
    "html-webpack-plugin": "^5.5.0",
    "lint-staged": "^11.2.6",
    "rimraf": "^3.0.2",
    "terser-webpack-plugin": "^5.2.4",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "ts-protoc-gen": "^0.15.0",
    "typescript": "^4.6.2",
    "uuid": "^8.3.2",
    "webpack": "^5.68.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.4.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.4.5",
    "node-ipc": "^10.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "recoil": "^0.6.1",
    "regenerator-runtime": "^0.13.9"
  },
  "devEngines": {
    "node": ">=14.x",
    "npm": ">=7.x"
  },
  "browserslist": []
}
